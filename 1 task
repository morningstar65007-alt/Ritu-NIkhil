    <script>
        (function() {
            // groom and bride for personalization
            const bride = "Ritu";
            const groom = "Nikhil";

            // dom elements
            const yesBtn = document.getElementById('yesBtn');
            const noBtn = document.getElementById('noBtn');
            const answerMsgDiv = document.getElementById('answerMessage');
            const messageTextSpan = document.getElementById('messageText');
            
            // romantic, playful responses for Yes
            const yesMessages = [
                "‚ú® Yay! She said YES! ‚ú®",
                "üíñ Forever starts now! üíñ",
                "üíç It's official ‚Äì Ritu & Nikhil! üíç",
                "ü•Ç Cheers to a lifetime! ü•Ç",
                "üåü Ritu chose Nikhil! üåü",
                "üíû A thousand fireworks! üíû"
            ];

            // charming but cheeky "No" messages ‚Äì but they eventually change to Yes (trendy soft rejection / playful)
            const noMessages = [
                "üò≤ Wait, try again?",
                "ü§î Are you sure?",
                "üòÖ That was the wrong button!",
                "‚ù§Ô∏è‚Äçüî• Oops, maybe Yes?",
                "üíò Nikhil is persistent...",
                "ü•∫ Don't break his heart!"
            ];

            // state to handle "no" click count (playful)
            let noClickCount = 0;
            const maxNoClicks = 3;   // after 3 nos, surprise yes

            // function to show message with optional custom text
            function displayMessage(text, withHeart = true) {
                messageTextSpan.innerText = text;
                answerMsgDiv.classList.add('show-message');
                // add a little pop effect by quick remove/add (ensures animation)
                answerMsgDiv.style.animation = 'none';
                answerMsgDiv.offsetHeight; // reflow trick
                answerMsgDiv.style.animation = null;
            }

            // reset message (but we keep show state, but can modify)
            function hideMessage() {
                answerMsgDiv.classList.remove('show-message');
            }

            // yes button handler
            yesBtn.addEventListener('click', function(e) {
                e.preventDefault();
                // pick random yes message
                const randomIndex = Math.floor(Math.random() * yesMessages.length);
                const msg = yesMessages[randomIndex];
                displayMessage(msg);
                // add extra sparkle to card (little micro interaction)
                yesBtn.style.transform = 'scale(1.1)';
                setTimeout(() => { yesBtn.style.transform = ''; }, 200);
                // reset no click count if they pressed yes after some nos
                noClickCount = 0; 
            });

            // no button handler with progressive "change mind" effect
            noBtn.addEventListener('click', function(e) {
                e.preventDefault();
                noClickCount++;

                // after maxNoClicks, force a happy yes message (playful)
                if (noClickCount >= maxNoClicks) {
                    // special message: she changed her mind!
                    displayMessage(`‚ù§Ô∏è‚Äçüî• She changed her mind... YES! ‚ù§Ô∏è‚Äçüî•`);
                    noClickCount = 0;  // reset counter
                    // extra love: wiggle no button
                    noBtn.style.transform = 'translateX(4px)';
                    setTimeout(() => noBtn.style.transform = '', 150);
                    return;
                }

                // get a random no message (but keep it light)
                const randomNoIndex = Math.floor(Math.random() * noMessages.length);
                const noMsg = noMessages[randomNoIndex];
                
                // optionally add a teasing suffix based on count
                let finalMsg = noMsg;
                if (noClickCount === 1) {
                    finalMsg = finalMsg + " ü§≠";
                } else if (noClickCount === 2) {
                    finalMsg = "üí´ One more chance? " + finalMsg;
                }

                displayMessage(finalMsg);

                // subtle animation: shake the no button
                noBtn.style.transform = 'rotate(-2deg) scale(1.03)';
                setTimeout(() => { noBtn.style.transform = ''; }, 200);
                
                // bonus: move the yes button a little (playful)
                yesBtn.style.transition = 'all 0.2s';
                yesBtn.style.transform = 'scale(1.02)';
                setTimeout(() => { yesBtn.style.transform = ''; }, 200);
            });

            // optional: double click on card hides message (easter egg)
            const card = document.querySelector('.proposal-card');
            card.addEventListener('dblclick', function() {
                hideMessage();
                noClickCount = 0; // reset counter
            });

            // initially hide message (no message shown)
            hideMessage();

            // extra detail: pre-fill hidden message empty
            messageTextSpan.innerText = '';

            // for better UX, clicking anywhere on message does nothing but it's cute
        })();
    </script>

    <!-- tiny extra inline for fluidity -->
    <noscript>Enable JavaScript for romantic interaction</noscript>
